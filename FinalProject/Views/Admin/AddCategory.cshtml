@if (ViewData["CategoryExists"] != null)
{
    <div class="alert alert-danger">
        @ViewData["CategoryExists"]
    </div>
}

<h2>Kategori Ekle</h2>

    <form asp-controller="Admin" asp-action="AddCategory" method="post">
        <div class="form-group">
            <label for="CategoryName">Kategori Adı</label>
            <input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="Kategori adını girin" required>
        </div>
        <button type="submit" class="btn btn-primary">Kategori Ekle</button>
    </form>

