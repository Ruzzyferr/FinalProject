@model List<FinalProject.Models.DTOs.ShoppingListItemDto>

<h2>Alışverişe Çıkıyorum</h2>

<form asp-controller="Home" asp-action="CompleteShopping" method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Ürün Açıklaması</th>
                <th>İşaretle</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].ProductName</td>
                    <td>@Model[i].Description</td>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].IsChecked" />
                        <input type="hidden" asp-for="@Model[i].ShoppingListItemId" />
                        <input type="hidden" asp-for="@Model[i].ShoppingListId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-secondary">Alışveriş Tamamlandı</button>
</form>
